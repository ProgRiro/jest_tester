{
  "compilerOptions": {
    "sourceMap": true,
    "target": "ES5",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": false,
    "downlevelIteration": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "jsx": "react",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "lodash/*": ["/node_modules/lodash/*"]
    }
  },
  "exclude": ["node_modules"]
}
